# Flask secrets
SECRET_KEY=dev-secret-key-replace-in-production
JWT_SECRET=dev-jwt-secret-replace-in-production
JWT_ALGORITHM=HS256

# Database (replace with your actual Supabase connection string)
# Example: postgresql://postgres:password@db.xxxxx.supabase.co:5432/postgres
DATABASE_URL=sqlite:///star.db

# CORS
ALLOWED_ORIGINS=http://localhost:3000,https://your-frontend.vercel.app

# Supabase (required for production deployment)
SUPABASE_URL=https://your-supabase-project-ref.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key-here

# Server
PORT=5000
FLASK_DEBUG=1
