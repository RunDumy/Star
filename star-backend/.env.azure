# Star Backend Environment Variables - Azure Production
# DO NOT COMMIT THIS FILE TO VERSION CONTROL

# Azure App Service Configuration
PORT=5000
FLASK_ENV=production
FLASK_DEBUG=False

# Security Keys (Use Azure Key Vault in production)
SECRET_KEY=your-production-secret-key-here
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ALGORITHM=HS256

# Azure Cosmos DB Configuration
COSMOS_DB_CONNECTION_STRING=AccountEndpoint=https://star-cosmos-free.documents.azure.com:443/;AccountKey=YOUR_COSMOS_KEY_HERE;
COSMOS_DB_DATABASE_NAME=star-database
COSMOS_DB_CONTAINER_USERS=users
COSMOS_DB_CONTAINER_POSTS=posts
COSMOS_DB_CONTAINER_READINGS=tarot_readings

# Agora RTC Configuration
AGORA_APP_ID=5d835f5e1f244f259d6e8681479c54cf
AGORA_APP_CERTIFICATE=99c4d072d6694249a72d1716a75ffab5

# CORS Configuration
ALLOWED_ORIGINS=https://star-app-backend.azurewebsites.net,http://localhost:3000

# Cache Configuration (No Redis on F1 tier)
NO_REDIS=true
CACHE_TYPE=SimpleCache
CACHE_DEFAULT_TIMEOUT=300

# Azure Blob Storage (Optional - for file uploads)
AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=YOUR_STORAGE_ACCOUNT;AccountKey=YOUR_STORAGE_KEY;EndpointSuffix=core.windows.net
AZURE_STORAGE_CONTAINER_NAME=star-uploads

# Application Insights (Optional - for monitoring)
APPLICATIONINSIGHTS_CONNECTION_STRING=InstrumentationKey=YOUR_INSIGHTS_KEY

# Oracle Engine Configuration
ORACLE_ENGINE_ENABLED=true
ORACLE_MAX_READINGS_PER_DAY=10

# Feature Flags
ENABLE_3D_COSMOS=true
ENABLE_LIVE_STREAMING=true
ENABLE_MULTI_ZODIAC=true
MAX_UPLOAD_SIZE_MB=50

# Logging
LOG_LEVEL=INFO
LOG_TO_FILE=true
LOG_FILE_PATH=app.log