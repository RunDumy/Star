# Flask secrets
SECRET_KEY=replace-with-a-secure-random-string
JWT_SECRET=replace-with-a-secure-random-string
JWT_ALGORITHM=HS256

# Database (use your Supabase connection string)
# Example: postgresql://postgres:password@db.xxxxx.supabase.co:5432/postgres
DATABASE_URL=postgresql://YOUR_SUPABASE_USER:YOUR_SUPABASE_PASSWORD@YOUR_SUPABASE_HOST:5432/postgres

# CORS
ALLOWED_ORIGINS=http://localhost:3000,https://your-frontend.vercel.app

# Supabase (optional for future storage/auth integration from backend)
SUPABASE_URL=https://your-project-ref.supabase.co
SUPABASE_ANON_KEY=your-public-anon-key

# Server
PORT=5000
FLASK_DEBUG=1
